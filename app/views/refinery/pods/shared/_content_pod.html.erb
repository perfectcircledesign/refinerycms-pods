<div class="side_pod content_pod">
  <% if pod.url.present? and pod.title.present? %>
      <h1><%= link_to(pod.title, pod.url, :class => 'title') %></h1>
  <% else %>
      <h1><div class="title"><%= pod.title %></div></h1>
  <% end %>
  <%= content_tag('div', raw(pod.body), :class => 'body') if pod.body.present? %>
</div>